<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/class_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardMargin_top_bottom"
    android:layout_marginTop="@dimen/cardMargin_top_bottom"
    android:layout_marginRight="@dimen/cardMargin_right_left"
    android:layout_marginLeft="@dimen/cardMargin_right_left"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/cardElevation"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="110dp"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/class_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="2"
            android:text="java"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"/>
        <ImageView
            android:id="@+id/class_iv"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            />

        </LinearLayout>


</android.support.v7.widget.CardView>